
const c = @builtin("c_str")
type int = @builtin("c_int")
type char = @builtin("c_char")
extern function puts(message: *char): int;

function main(): @builtin("c_int") {
    let i: int = 0

    if (i === 0) {
        puts(c`1`)
    } else {
        puts(c`FAIL`)
    }

    i = 2
    if (i === 2) {
        puts(c`2`)
    } else {
        puts(c`FAIL`)
    }

    i = i - 2
    if (i === 0) {
        puts(c`0`)
    } else {
        puts(c`FAIL`)
    }
    puts(c`PASS`)

    return i
}
