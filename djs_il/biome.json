{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "correctness": {
        "noUnusedVariables": { "level": "warn" },
        "useYield": { "level": "warn" }
      },
      "style": {
        "useImportType": { "level": "warn" },
        "useConst": { "level": "warn" }
      }
		}
	},
  "formatter": {
    "enabled": false
  }
}
