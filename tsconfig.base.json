{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true,
        "target": "ES2022",
        "module": "NodeNext",
        "rewriteRelativeImportExtensions": true,
        "verbatimModuleSyntax": true
    }
}
